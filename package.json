{
  "name": "pay-directdebit-frontend",
  "description": "Payments Direct Debit frontend application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">6.12.2"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node ./start.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test": "node ./node_modules/nyc/bin/nyc node ./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(_test|_tests)'.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "body-parser": "1.18.x",
    "compression": "1.7.x",
    "express": "4.16.x",
    "i18n": "0.8.x",
    "minimist": "1.2.x",
    "morgan": "1.9.x",
    "nunjucks": "^3.0.1",
    "pino": "4.10.x",
    "readdir": "0.0.x",
    "serve-favicon": "2.4.5",
    "staticify": "0.0.x",
    "throng": "4.0.x"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "8.0.x",
    "chai": "^4.1.2",
    "chokidar-cli": "latest",
    "envfile": "^2.1.1",
    "eslint": "^3.19.0",
    "govuk-elements-sass": "3.1.2",
    "govuk_frontend_toolkit": "7.2.0",
    "govuk_template_jinja": "^0.23.0",
    "grunt": "1.0.x",
    "grunt-browserify": "^5.0.0",
    "grunt-cli": "1.2.x",
    "grunt-concurrent": "2.3.x",
    "grunt-contrib-clean": "1.1.x",
    "grunt-contrib-compress": "^1.4.3",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-watch": "1.0.x",
    "grunt-env": "0.4.x",
    "grunt-mocha-test": "^0.13.2",
    "grunt-nodemon": "0.4.x",
    "grunt-rewrite": "1.0.x",
    "grunt-sass": "2.0.x",
    "grunt-text-replace": "0.4.x",
    "jquery": "^3.2.1",
    "mocha": "4.0.x",
    "node-sass": "4.7.x",
    "nyc": "^11.3.0",
    "sass-lint": "^1.10.2",
    "snyk": "1.54.x",
    "standard": "^10.0.2",
    "supertest": "^3.0.0"
  },
  "snyk": true
}
